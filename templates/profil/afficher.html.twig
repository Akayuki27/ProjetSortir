{% extends 'base.html.twig' %}

{% block title %}Profil de {{ participant.pseudo }}{% endblock %}
{% block titrepage %}
    <div class="title-container">
        <h1>Profil de {{ participant.pseudo }}</h1>
    </div>
{% endblock %}
{% block body %}
    <h1>Profil de {{ participant.pseudo }}</h1>
    {% if participant.ImgName %}
        <img src="{{ asset('photos/' ~ participant.ImgName) }}" alt="Photo de profil">
    {% endif %}
    <p>Nom : {{ participant.lastname }}</p>
    <p>Pr√©nom : {{ participant.firstname }}</p>
    <p>Email : {{ participant.email }}</p>
    {% if app.user == participant %}
    <a href="{{ path('app_profil_modification') }}">Modifier mon profil</a>
{% endif %}
{% endblock %}
