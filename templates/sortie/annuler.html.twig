{% extends 'base.html.twig' %}

{% block title %}Annuler la sortie {{ sortie.nom }}{% endblock %}
{% block titrepage %}
    <div class="title-container">
        <h1>{{ sortie.nom }}</h1>
    </div>
{% endblock %}
{% block body %}


<div class="sortie-annule-container">
    <p>Campus: {{ sortie.campus.nom }}</p>
    <p>Lieu: {{ sortie.lieu.nom }}</p>
    <p>Rue: {{ sortie.lieu.rue }}</p>
    <p>Ville: {{ sortie.lieu.ville.nom }}</p>
    <p>Code Postal: {{ sortie.lieu.ville.codePostal }}</p>
    {{ form_start(form) }}
    <div class="sortie-annule-item">
        {{ form_label(form.motifAnnulation) }}
    </div>
    <div class="sortie-annule-item">
        {{ form_widget(form.motifAnnulation) }}
    </div>
    <div class="sortie-annule-item">
        <button class="btn">Annuler la sortie</button>
    </div>
    {{ form_end(form) }}
    <a href="{{ path('sortie_list') }}" title="retour">Retour</a>
</div>
{% endblock %}