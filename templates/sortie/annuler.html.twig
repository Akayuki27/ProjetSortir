{% extends 'base.html.twig' %}

{% block title %}Annuler la sortie {{ sortie.nom }}{% endblock %}
{% block titrepage %}
    <div class="title-container">
        <h1>{{ sortie.nom }}</h1>
    </div>
{% endblock %}
{% block body %}

    {{ form_start(form) }}
    <div style="display: none">
    {{ form_widget(form) }}
    </div>
    <p>Campus: {{ sortie.campus.nom }}</p>
    <p>Lieu: {{ sortie.lieu.nom }}</p>
    <p>Rue: {{ sortie.lieu.rue }}</p>
    <p>Ville: {{ sortie.lieu.ville.nom }}</p>
    <p>Code Postal: {{ sortie.lieu.ville.codePostal }}</p>
    <label for="raison">Pour quel motif annulez-vous la sortie ?</label>
    <textarea id="raison"></textarea>
    </br>
    <button>Annuler la sortie</button>

    {{ form_end(form) }}
    <a href="{{ path('sortie_list') }}" title="retour">Retour</a>
{% endblock %}